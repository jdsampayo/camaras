@font-face {
  font-family: MetroDF;
  src: url(<%=asset_path('METRO-DF.ttf')%>);
}

html, body {
  font-family: "Helvetica Neue", Arial, Helvetica, Geneva, sans-serif;
  -webkit-user-select:none;
  -webkit-text-size-adjust:none;
}

.ui-page {
  background: #2b2623;
  z-index: 1;
  -webkit-backface-visibility:hidden!important;
  color: #acafab;
}

.pagina-gris.ui-page.ui-body-c.ui-page-active{
	background:#e2e2e2;
}

.ui-header{
  background: #FF7400;
  border: #FF7400;
  height: 45px;
  top:-9px;
  margin-bottom:-9px;
  

  h1{
    text-transform: uppercase;
