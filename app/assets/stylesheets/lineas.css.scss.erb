<%
colores_iniciales = %w[#eb7ca5 #4697d4 #d7c858 #84c8c1 #fec920 #d91b4b #ec783e #17b585 #834a46 #ba3e95 #055b41]
colores_finales =   %w[#8f1442 #06416f #71650c #45968d #d1a000 #a8002a #bd4e16 #00815a #4a1e1a #861865 #8b8b89]
bordes =            %w[#8c0a3a #082873 #3f3800 #002723 #3f3000 #3a000e #3f1500 #002a1d #3f0500 #300021 #002a1d]
lineas = %w[1 2 3 4 5 6 7 8 9 A B]

lineas.each_with_index do | linea, index |
%>
.atras-<%=linea%>{
  background-image: -webkit-gradient(linear, left top, left bottom, from(<%=colores_iniciales[index]%>), to(<%=colores_finales[index]%>))!important; /* Saf4+, Chrome */
  background-image: -webkit-linear-gradient(<%=colores_iniciales[index]%>, <%=colores_finales[index]%>)!important; /* Chrome 10+, Saf5.1+ */
  background-image:    -moz-linear-gradient(<%=colores_iniciales[index]%>, <%=colores_finales[index]%>)!important; /* FF3.6 */
  background-image:     -ms-linear-gradient(<%=colores_iniciales[index]%>, <%=colores_finales[index]%>)!important; /* IE10 */
  background-image:      -o-linear-gradient(<%=colores_iniciales[index]%>, <%=colores_finales[index]%>)!important; /* Opera 11.10+ */
  background-image:         linear-gradient(<%=colores_iniciales[index]%>, <%=colores_finales[index]%>)!important;

  <%if linea == "B"%>
  background-image: linear-gradient(top,<%=colores_iniciales[index]%> 50%,<%=colores_finales[index]%> 50%)!important;
  background-image: -moz-linear-gradient(top,<%=colores_iniciales[index]%> 50%,<%=colores_finales[index]%> 50%)!important;
  background-image: -webkit-linear-gradient(top,<%=colores_iniciales[index]%> 50%,<%=colores_finales[index]%> 50%)!important;
  <%end%>

  border: <%=bordes[index]%>;
}
<%
end
%>

