<div data-role="page" class="linea-<%= @linea.nombre %>">
  <div data-role="header" class="linea-<%= @linea.nombre %>" data-position="inline">
    <% if @linea.nombre == "B" %>
    <span class="linea-B-2"></span>
    <% end %>    
    <a data-rel="back" data-icon="arrow-l" class="atras-<%= @linea.nombre %>">Atrás</a>
    <h1>Línea <%= @linea.nombre %></h1>
  </div>
  <div data-role="content">
    <ul data-role="listview" data-theme="c">
      
      <% @estaciones.each do |estacion| %>
      <li>
	<a href="<%=estacion_path(estacion)%>">
          <img class="estacion" src="/images/<%=estacion.imagen%>" />
          <h3><%=estacion.nombre%></h3>
          <p>Teléfono: Sin teléfono de contacto</p>
          <span class="ui-li-count"><%=estacion.camaras.count%></span>
	</a>
      </li>
      
      <% end %>
    </ul>
  </div>
</div>
