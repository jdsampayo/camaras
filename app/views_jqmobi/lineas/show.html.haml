%header{class: "linea-#{@linea.nombre}"}
  %h2{class: "linea-#{@linea.nombre}"}="LINEA #{@linea.nombre}"

%ul
  - @estaciones.each do |estacion|
    %li
      %a{href: estacion_path(estacion) , class: "linea-activa-#{@linea.nombre}"}
        %img.estacion{src: "/images/#{estacion.imagen}"}
        %span=estacion.nombre
